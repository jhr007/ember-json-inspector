
<div layout-align="center">
    <h1 id="title">Ember JSON Inspector</h1>
</div>

<div layout="row">

    <div flex="{{jsonInputWidth}}" offset="{{jsonInspectorLeftMargin}}">
        <h2 class="md-title">JSON Text</h2>
        {{#if jsonError}}
            <div class="md-warn">
                Bad JSON

            <div layout-padding="" >
                {{jsonErrorMessage}}
            </div>
              </div>
        {{/if}}

        {{textarea value=jsontext layout-fill="" rows="10" class='jsonInput'}}

        {{#md-button class="md-raised md-primary" action="sampleData1" bubbles=false}}
            Sample Data
        {{/md-button}}
    </div>

    {{#if showInspector}}

    <div flex="{{jsonInspectorCenterMargin}}"></div>

    <div class="ji-panel" layout="column" flex>
        {{!-- {{#liquid-if showInspector class='showInspector'}} --}}

        <h2 class="md-title">JSON Inspector</h2>

        {{#sticky-container options=stickyOptions}}

            <div class="propertyPath" >
                <div class="md-whiteframe-z2" >
                    {{input value=propertyPath}}
                </div>
            </div>
        {{/sticky-container}}

        <div class="md-whiteframe-z2" layout-padding>
            {{json-inspector inspectThis=inspectThisObject updatePath="updatePath"}}
        </div>
        {{!-- {{/liquid-if }}  {{!#if false}} --}}
    </div>

    <div flex="{{jsonInspectorRightMargin}}">

    </div>


    {{/if }}  {{!#if false}}
</div>

{{outlet}}
